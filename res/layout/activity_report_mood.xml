<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reportMoodLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background1"
    >

    <Button
        android:id="@+id/buttonPAM"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buttonAffectButton"
        android:layout_below="@+id/buttonPANASShortNoPhoto"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/pam" />

    <Button
        android:id="@+id/buttonPANASShortNoPhoto"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buttonAffectButton"
        android:layout_below="@+id/buttonPANASLongWithPhoto"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/panas_short_no_photo" />

    <Button
        android:id="@+id/buttonPANASLongWithPhoto"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buttonAffectButton"
        android:layout_below="@+id/buttonSPANEWithPhoto"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/panas_long_with_photo" />

    <Button
        android:id="@+id/buttonSPANEWithPhoto"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buttonAffectButton"
        android:layout_below="@+id/buttonSPANENoPhoto"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/spane_with_photo" />

    <Button
        android:id="@+id/buttonSPANENoPhoto"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buttonAffectButton"
        android:layout_below="@+id/buttonAffectButton"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/spane_no_photo" />

    <TextView
        android:id="@+id/textViewReportMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:textColor="@color/Cyan"
        android:text="@string/report_mood" />

    <Button
        android:id="@+id/buttonAffectButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewReportMood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_background1"
        android:text="@string/affect_button" />

</RelativeLayout>
