<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statisticsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background1"
    >

    <Button
        android:id="@+id/buttonPAMStat"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buttonAffectButtonStat"
        android:layout_below="@+id/buttonPANASShortNoPhotoStat"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/pam" />

    <Button
        android:id="@+id/buttonPANASShortNoPhotoStat"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buttonAffectButtonStat"
        android:layout_below="@+id/buttonPANASLongWithPhotoStat"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/panas_short_no_photo" />

    <Button
        android:id="@+id/buttonPANASLongWithPhotoStat"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buttonAffectButtonStat"
        android:layout_below="@+id/buttonSPANEWithPhotoStat"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/panas_long_with_photo" />

    <Button
        android:id="@+id/buttonSPANEWithPhotoStat"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buttonAffectButtonStat"
        android:layout_below="@+id/buttonSPANENoPhotoStat"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/spane_with_photo" />

    <Button
        android:id="@+id/buttonSPANENoPhotoStat"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buttonAffectButtonStat"
        android:layout_below="@+id/buttonAffectButtonStat"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/spane_no_photo" />

    <Button
        android:id="@+id/buttonAffectButtonStat"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewStat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background1"
        android:text="@string/affect_button" />

    <TextView
        android:id="@+id/textViewStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:textColor="@color/Blue"
        android:text="@string/statistics" />

</RelativeLayout>
